---
import { Icon } from "astro-icon/components";
import { siteConfig } from "../config";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import { formatDateToYYYYMMDD } from "../utils/date-utils";
import { getCategoryUrl, getTagUrl } from "../utils/url-utils";

interface Props {
	class: string;
	published: Date;
	updated?: Date;
	pinned?: boolean;
	tags: string[];
	category: string | null;
	hideTagsForMobile?: boolean;
	hideUpdateDate?: boolean;
	pageviewPath?: string;
}
const {
	published,
	updated,
	pinned = false,
	tags,
	category,
	hideTagsForMobile = false,
	hideUpdateDate = false,
	pageviewPath,
} = Astro.props;
const className = Astro.props.class;
const walineServerURL = siteConfig.waline?.serverURL;
const walinePageviewEnabled = siteConfig.waline?.pageview ?? false;
---

<div class:list={["flex flex-wrap text-neutral-500 dark:text-neutral-400 items-center gap-4 gap-x-4 gap-y-2", className]}>
    <!-- publish date -->
    <div class="flex items-center">
		{pinned && (
			<>
				<div class="meta-icon">
					<Icon name="material-symbols:keep" class="text-xl"></Icon>
				</div>
				<span class="text-50 text-sm font-medium mr-4">置顶</span>
			</>
		)}
        <div class="meta-icon"
        >
            <Icon name="material-symbols:calendar-today-outline-rounded" class="text-xl"></Icon>
        </div>
        <span class="text-50 text-sm font-medium">{formatDateToYYYYMMDD(published)}</span>
    </div>

    <!-- update date -->
    {!hideUpdateDate && updated && updated.getTime() !== published.getTime() && (
        <div class="flex items-center">
            <div class="meta-icon"
            >
                <Icon name="material-symbols:edit-calendar-outline-rounded" class="text-xl"></Icon>
            </div>
            <span class="text-50 text-sm font-medium">{formatDateToYYYYMMDD(updated)}</span>
        </div>
    )}

    <div class="flex items-center">
        <div class="meta-icon">
            <Icon name="material-symbols:visibility-outline-rounded" class="text-xl"></Icon>
        </div>
        <span class="text-50 text-sm font-medium">
            <span class="waline-pageview-count" data-path={pageviewPath}>-</span> 次浏览
        </span>
    </div>

    <!-- categories -->
    <div class="flex items-center">
        <div class="meta-icon"
        >
            <Icon name="material-symbols:book-2-outline-rounded" class="text-xl"></Icon>
        </div>
        <div class="flex flex-row flex-nowrap items-center">
            <a href={getCategoryUrl(category)} aria-label={`View all posts in the ${category} category`}
               class="link-lg transition text-50 text-sm font-medium
                            hover:text-[var(--primary)] dark:hover:text-[var(--primary)] whitespace-nowrap">
                {category || i18n(I18nKey.uncategorized)}
            </a>
        </div>
    </div>

    <!-- tags -->
    <div class:list={["items-center", {"flex": !hideTagsForMobile, "hidden md:flex": hideTagsForMobile}]}>
        <div class="meta-icon"
        >
            <Icon name="material-symbols:tag-rounded" class="text-xl"></Icon>
        </div>
        <div class="flex flex-row flex-nowrap items-center">
            {(tags && tags.length > 0) && tags.map((tag, i) => (
                <div class:list={[{"hidden": i == 0}, "mx-1.5 text-[var(--meta-divider)] text-sm"]}>/</div>
                <a href={getTagUrl(tag)} aria-label={`View all posts with the ${tag.trim()} tag`}
                   class="link-lg transition text-50 text-sm font-medium
                                hover:text-[var(--primary)] dark:hover:text-[var(--primary)] whitespace-nowrap">
                    {tag.trim()}
                </a>
            ))}
            {!(tags && tags.length > 0) && <div class="transition text-50 text-sm font-medium">{i18n(I18nKey.noTags)}</div>}
        </div>
    </div>
</div>

<script is:inline define:vars={{ walineServerURL, walinePageviewEnabled }}>
	const normalizePathname = (pathname) => {
		if (!pathname) return "/";
		if (pathname !== "/" && pathname.endsWith("/")) return pathname.slice(0, -1);
		return pathname;
	};

	const updatePageviews = async () => {
		const config = window.__walinePageviewCountConfig;
		if (!config?.enabled || !config?.serverURL) return;
		if (!document.querySelector(".waline-pageview-count")) return;

		try {
			window.__walinePageviewCountAbort?.();
		} catch {}

		const module = await import("https://unpkg.com/@waline/client@v3/dist/pageview.js");
		const path = normalizePathname(window.location.pathname);
		window.__walinePageviewCountAbort = module.pageviewCount?.({
			serverURL: config.serverURL,
			path,
			update: false,
		});
	};

	window.__walinePageviewCountConfig = {
		serverURL: walineServerURL,
		enabled: walinePageviewEnabled,
	};

	if (!window.__walinePageviewCountListenersAdded) {
		window.__walinePageviewCountListenersAdded = true;
		document.addEventListener("astro:page-load", updatePageviews);
		if (document.readyState === "complete" || document.readyState === "interactive") {
			updatePageviews();
		} else {
			document.addEventListener("DOMContentLoaded", updatePageviews);
		}
		if (window?.swup?.hooks) {
			window.swup.hooks.on("page:view", updatePageviews);
		}
	} else {
		updatePageviews();
	}
</script>
